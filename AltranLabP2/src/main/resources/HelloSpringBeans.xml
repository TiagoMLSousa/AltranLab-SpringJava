<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
">
    <bean id="hello" class="com.altran.lab.spring.hello.HelloA" />
    
    <bean id="hello2" class="com.altran.lab.spring.hello.HelloA">
        <property name="message" value="This message comes from XML injection" />
    </bean>
    
    <bean id="hello3" class="com.altran.lab.spring.hello.HelloA">
        <constructor-arg name="message">
            <value>This message comes from XML injection by constructor</value>
        </constructor-arg>
    </bean>
    
    <bean id="helloPrinter" class="com.altran.lab.spring.hello.HelloPrinter">
        <property name="helloInstance" ref="hello" />
    </bean>
</beans>
